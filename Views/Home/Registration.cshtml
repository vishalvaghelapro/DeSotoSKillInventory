
@{
    ViewData["Title"] = "Registration";
}
<div class="pagetitle">

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Registration</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="p-2 p-md-1">
    <div class="col-lg-8">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Registration Form</h5>

                        <form id="registrationForm" class="row g-3 needs-validation" novalidate>
                            <div class="col-md-12 mb-3">
                                <label for="FName">First name</label>
                                <input type="text" class="form-control" id="FName" required>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="LName">Last name</label>
                                <input type="text" class="form-control" id="LName" required>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" required>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="DropDepartment">Department</label>
                                <select id="DropDepartment" class="form-control" required>
                                    <option selected disabled value="">Select Department...</option>
                                    <option>...</option>
                                </select>
                            </div>
                            <div class="form-group col-md mt-3 mb-3">
                                <label for="Roll">Roll&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="Roll" id="Roll" value="Employee" required>
                                    <label class="form-check-label" for="intermediateRadio">
                                        Employee
                                    </label>
                                </div>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="Roll" id="Roll" value="Admin" required>
                                    <label class="form-check-label" for="beginnerRadio">
                                        Admin
                                    </label>
                                </div>
                                <div class="col-md-12 mt-3 mb-3">
                                    <label for="Password">Password</label>
                                    <input type="password" id="Password" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-12 mt-3 col d-flex justify-content-center">
@*                                 <button type = "submit" id="subitFormButton" class="btn-primary btn-lg align-content-center" onclick="AddEmpData();">Submit</button>
                        *@                        <button type="button" class="btn .btn-lg btn-success text-white" onclick="AddEmpData()">Submit</button>

                            </div>
                        </form>
                        <div class="row">
                            <br />
                        </div>
                    </div>
                </div>
            </div>
    
</section>

@section scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/dropdown.js"></script>
    <script src="~/js/site.js"></script>
  
}
