@{
    ViewData["Title"] = "Registration";
}
<div class="pagetitle">

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Registration</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="p-2 p-md-1">
    <div class="col-lg-8">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Registration Form</h5>
                <form id="myForm" class="row g-3 needs-validation" novalidate>
                    <div class="col-md-12 mb-3 position-relative">
                        <label for="FName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="FName" required>
                        <div class="invalid-tooltip">Looks good!</div>
                    </div>
                    <div class="col-md-12 mb-3 position-relative">
                        <label for="LName">Last name</label>
                        <input type="text" class="form-control" id="LName" required>
                        <div class="invalid-tooltip">Please fill out this field.</div>
                    </div>
                    <div class="col-md-12 mb-3 position-relative">
                        <label for="Email">Enter your email:</label>
                        <input type="email" class="form-control" id="Email" placeholder="youremail@desotoTechnologies.com" required>
                        <div id="emailerror" class="invalid-tooltip">Please enter a valid email address.</div>
                    </div>

                    <div class="col-md-12 mb-3 position-relative">
                        <label for="DropDepartment">Department</label>
                        <select id="DropDepartment" class="form-control" required>
                            <option selected disabled value="">Select Department...</option>
                            <option>...</option>
                        </select>
                        <div class="invalid-tooltip">Please select a department.</div>
                    </div>

                    <div class="form-group col-md mt-3 mb-3 position-relative">
                        <label for="Roll">Roll&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                        <div class="form-check-inline">
                            <input class="form-check-input" type="radio" name="Roll" id="Roll1" value="Employee" required>
                            <label class="form-check-label" for="Roll1">Employee</label>
                        </div>
                        <div class="form-check-inline">
                            <input class="form-check-input" type="radio" name="Roll" id="Roll2" value="Admin" required>
                            <label class="form-check-label" for="Roll2">Admin</label>
                        </div>
                        <div class="invalid-tooltip">Please select a role.</div>
                    </div>

                    <div class="col-md-12 mb-3 position-relative">
                        <label for="Password">Password</label>
                        <input type="password" id="Password" class="form-control" required>
                        <div class="invalid-tooltip">Please enter a password.</div>
                    </div>

                    <div class="col-12 mt-3 col d-flex justify-content-center">
                        <button class="btn btn-primary" disabled onclick="AddEmpData();">Submit</button>
                    </div>

                </form>
         

                <div class="row">
                    <br />
                </div>
            </div>
        </div>
    </div>

</section>

@section scripts{
    <script src="~/js/dropdown.js"></script>

}
