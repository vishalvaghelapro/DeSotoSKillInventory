@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

   
    <!-- Template Main CSS File -->

    @* <link rel="stylesheet" href="~/CoreWebApp.styles.css" asp-append-version="true" /> *@
</head>

<body>
      <div class="container h-6 pt-5">
        <div class="row d-flex justify-content-end">
            @* <div class="coL col-xl-10"> *@
            <div class="col-12">
                <div class="card m-y p-4" style="border-radius: 1rem;">
                    <div class="row">
                        <div class="col-md-4 col-4 d-none d-md-block">
                            <img src="~/img/desktop-wallpaper-iphone-spiritual-background-cool-spiritual.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-3 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-controller="Core" asp-action="Login">

                                    <div class="d-flex justify-content-center mb-4 pb-1">
                                        <i class="fas fa-cubes fa-2x" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0"><img src="~/img/desotologo.png" /></span>
                                    </div>

                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="validationCustom01" value="" placeholder="Firstname Lastname" required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                    <br />
                                    <div class="col-md-10">
                                        <input type="password" class="form-control" id="validationCustom01" value="" placeholder="password" required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                    <br />

                                    <div class="col-10">
                                        <button class="btn btn-primary w-100" type="submit">Login</button>
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0">Don't have account? <a href="/Core/Registration">Create an account</a></p>
                                    </div>





                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
